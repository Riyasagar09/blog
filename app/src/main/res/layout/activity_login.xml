<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background"
    tools:context=".loginActivity">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="serif"
            android:text="Design by\n RN"
            android:textAlignment="center"
            android:textColor="#6E0550"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerButton"
            app:layout_constraintVertical_bias="0.238" />

        <TextView
            android:id="@+id/blogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOG."
            android:textColor="#6E0550"
            android:textSize="50sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/blogSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6E0550"
            android:text="Share your story\n with us."
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="serif"
            app:layout_constraintTop_toBottomOf="@id/blogTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/f2"


            android:scaleType="centerCrop"

            app:layout_constraintTop_toBottomOf="@id/blogSubtitle"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/editName"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:hint="Enter Your Name"
            android:textColor="#6E0550"
            android:fontFamily="serif"
            android:background="@drawable/button_border_blue"
            app:layout_constraintTop_toBottomOf="@id/avatarImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="270dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:textColor="#6E0550"
            android:hint="Enter Your Email"
            android:fontFamily="serif"
            android:background="@drawable/button_border_blue"
            app:layout_constraintTop_toBottomOf="@id/editName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="270dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:hint="Enter Password"
            android:textColor="#6E0550"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:background="@drawable/button_border_blue"
            app:layout_constraintTop_toBottomOf="@id/editEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textColor="#6E0550"
            android:fontFamily="@font/love_ya_like_a_sister"
            android:background="@drawable/button_border_red"
            app:layout_constraintTop_toBottomOf="@id/editPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textNewHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New here?"
            android:fontFamily="serif"
            android:textColor="#6E0550"
            app:layout_constraintTop_toBottomOf="@id/loginButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E361BD"
            android:fontFamily="serif"
            android:text="Register"
            android:textColor="#030404"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textNewHere" />


</androidx.constraintlayout.widget.ConstraintLayout>