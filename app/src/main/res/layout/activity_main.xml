<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">
        <TextView
            android:id="@+id/blogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOG."
            android:layout_marginTop="80dp"
            android:textColor="#6E0550"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textColor="#6E0550"
            android:textSize="26sp"
            android:textStyle="bold"

            android:layout_below="@id/blogTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:fontFamily="serif" />



        <Button
            android:id="@+id/btnWrite"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:text="@string/write_blog"
            android:layout_below="@id/tvWelcome"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="#6E0550"
            android:background="@drawable/button_border_red" />

        <Button
            android:id="@+id/btnRead"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/read_blogs"
            android:textStyle="bold"
            android:layout_below="@id/btnWrite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="#6E0550"
            android:background="@drawable/button_border_blue" />

        <Button
            android:id="@+id/btnTrending"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Trending News"
            android:textStyle="bold"
            android:layout_below="@id/btnRead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="#6E0550"
            android:background="@drawable/button_border_red" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/design_by"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"


            android:fontFamily="serif"
            android:textColor="#6E0550"
          />
</RelativeLayout>
