<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F1CED9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            android:hint="Blog Title"
            android:textSize="20sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:padding="8dp" />

        <EditText
            android:id="@+id/etContent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="top"
            android:fontFamily="serif"
            android:background="@color/light_white"
            android:hint="Write your blog content here"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:overScrollMode="always"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <CheckBox
            android:id="@+id/cbDraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save as Draft"
            android:fontFamily="serif"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnPickMedia"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Pick Image/Video"
            android:backgroundTint="#D57AA4"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button" />

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

        <VideoView
            android:id="@+id/vvPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Draft"
            android:fontFamily="serif"
            android:backgroundTint="#D57AA4"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button" />

        <Button
            android:id="@+id/btnPublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:fontFamily="serif"
            android:backgroundTint="#D57AA4"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>
